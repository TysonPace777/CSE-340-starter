<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (locals.accountData) { %>
      <a class="space" title="Click to manage your account" href="/account/accounts">
        Welcome, <%= accountData.account_firstname %> |
      </a>
      <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
        <a class="space" title="Manage Inventory" href="/inv/">Inventory |</a>
      <% } %>

      <a title="Click to logout" href="/account/logout">Logout</a>
    <% } else { %>
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>