<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<p>You're Logged in.</p>
<a href="/account/update">Update Account Information</a>
<hr>
<input type="hidden" id="account-id" value="<%= accountData?.account_id || '' %>">
<label for="dark-mode" class="dark-check">
  Dark Mode:<input type="checkbox" id="dark-mode" <%= accountData?.account_mode ? 'checked' : '' %>>
</label>

<script src="/js/dark-mode.js"></script>